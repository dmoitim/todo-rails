<% { 'Pendentes' => @pending_tasks, 'Finalizadas' => @finished_tasks}.each do |name, tasks| %>

  <h2><%= name %> </h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Feito?</th>
        <th scope="col">Categoria</th>
        <th scope="col">Nome</th>
        <th scope="col">Detalhes</th>
        <th scope="col">Prazo</th>
        <th scope="col">Atualizado em</th>
        <th scope="col">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td><%= task.done? ? '✓' : '-' %></td>
          <td><%= task.category.name %></td>
          <th><%= task.name %></th>
          <td><%= task.details %></td>
          <td><%= task.due_date.strftime("%d/%m/%Y") %></td>
          <td><%= task.updated_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
          <td>
            <%= link_to "Editar", edit_task_path(task), class: 'btn btn-success' %>
            <%= link_to "Excluir", task_path(task), class: 'btn btn-danger', method: :delete, data: { confirm: 'Você tem certeza?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>